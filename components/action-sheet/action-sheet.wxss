.action-sheet-view {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,.3) 0, #fff 100%);
  z-index: 50;
  text-align: center;
}

.action-sheet-inner-view {
  width: 80%;
  margin: 0 auto;
  padding: 100rpx 0;
}

.action-sheet-item {
  margin-bottom: 50rpx;
}